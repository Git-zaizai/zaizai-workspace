{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,

    "declaration": true /* 生成声明文件 */,
    "declarationMap": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"],
    "baseUrl": "."
  },
  "include": ["**/*.ts", "**/*.tsx", "**/**.vue"],
  "exclude": ["**/node_modules/**", "./__test__code", "./public"]
}
